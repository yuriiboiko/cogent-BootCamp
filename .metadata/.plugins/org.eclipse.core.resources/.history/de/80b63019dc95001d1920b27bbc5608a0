package com.cogent.assignment.q1;

import java.util.Scanner;

/**
 * @author  : Yurii Boiko
 * @Date	: Jan 16, 2023
 *
 */
public class TaskDAO {
	static int taskCounter=0;
	/**
	 * 
	 */
	public static Task[] addTask(Task [] t) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the Task name");
		String taskName= sc.next();
		Task t1 =new Task(taskCounter, taskName);
		taskCounter++;
		Task newTasks[] = null;
		if(t==null) {
			newTasks = new Task[1];
		}
		else {
			newTasks = new Task[t.length+1];
		}
		
		if(t==null) {
			newTasks[0]=t1;
		}
		else {
			System.arraycopy(t, 0, newTasks,0,t.length);
			t=null;
			newTasks[t.length]=t1;	
		}
		return newTasks;
	}

}
